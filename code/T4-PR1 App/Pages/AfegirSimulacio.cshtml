@page
@model T4_PR1_App.Pages.AfegirSimulacioModel
@using T4PR1
@{
	ViewData["Title"] = "Afegir simulacio";
}

<h2>Afegir simulació</h2>
<form method="post">
	<div class="form-group">
		<label asp-for="SistemaEnergia.Tipus">Tipus de sistema</label>
		<select asp-for="SistemaEnergia.Tipus" asp-items="Html.GetEnumSelectList<TipusSistema>()" class="form-control">
			<option value="">Selecciona un tipus de sistema</option>
		</select>
	</div>
	<div class="form-group">
		<label asp-for="SistemaEnergia.Rati">Rati del sistema</label>
		<input asp-for="SistemaEnergia.Rati" class="form-control" />
		<span asp-validation-for="SistemaEnergia.Rati" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="SistemaEnergia.Cost">Cost del sistema</label>
		<input asp-for="SistemaEnergia.Cost" class="form-control" />
		<span asp-validation-for="SistemaEnergia.Cost" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="SistemaEnergia.Preu">Preu del sistema</label>
		<input asp-for="SistemaEnergia.Preu" class="form-control" />
		<span asp-validation-for="SistemaEnergia.Preu" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Afegir simulació</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}